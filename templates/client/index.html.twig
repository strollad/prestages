{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Clients</h3>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Réf°</th>
                    <th scope="col">Personne morale</th>
                    <th scope="col">Organisation</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Téléphone(s)</th>
                    <th scope="col">Nb prestations</th>
                </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr class="show-client" data-client="{{ client.id }}">
                        <th scope="row">{{ client.id }}</th>
                        <td>{{ client.isMorale ? 'Oui' : '' }}</td>
                        <td>{{ client.organisation }}</td>
                        <td>{{ client.nom }} {{ client.prenom }}</td>
                        <td>
                            {{ client.adresse1 }}<br/>
                            {{ client.adresse2 }}<br/>
                            {{ client.codePostal }} {{ client.ville }}
                        </td>
                        <td>
                            {{ client.telFixe }}<br/>
                            {{ client.telPortable }}
                        </td>
                        <td>
                            {{ client.prestations.count }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="btn-toolbar text-center">
            <a type="button" class="btn btn-default btn-sm" aria-label="Ajouter"
               href="{{ path('client_ajouter') }}">
                <span class="silk-icon-page-add" aria-hidden="true"></span> Ajouter
            </a>
        </div>
    </div>
</div>
{% endblock %}